<div class="post small">
  <div class="body">
    {{#if reply}}
      <p>Reply to: <a href="{{reply}}">{{reply}}</a></p>
    {{/if}}
    {{#markdown}}{{{content}}}{{/markdown}}
    {{#if photo}}
    <div class="image mr-1">
      <img src="{{photo.url}}" alt="{{photo.alt}}">
    </div>
    {{/if}}
    <a href="/notes/{{slug}}" class="timestamp">
      <time>{{timestamp}}</time>
    </a>
  </div>
</div>
